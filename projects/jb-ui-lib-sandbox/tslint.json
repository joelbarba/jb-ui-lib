{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
        true,
        "attribute",
        "app",
        "camelCase"
    ],
    "component-selector": [
        true,
        "element",
        "app",
        "kebab-case"
    ],
    "no-console": false,
    "no-trailing-whitespace": false,
    "max-line-length": [
      true,
      {
        "limit": 300,
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-strings": true,
        "check-regex": true
      }
    ],
    "radix": false
  }
}
